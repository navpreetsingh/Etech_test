<% gender = ["Male", "Female", "Others"] %>
<% limit = [1,2,3,4,5] %>

<%= form_with(model: employee, local: true) do |form| %>
<%# :html => {:'data-type' => 'json'} %>
    <div class="modal-body">
        <div class="card-body card-block">
            <div class="errors form-group">
              <%= render "form_errors" %>
            </div>
            <div class="form-group">
                <%= form.label :role, class: "form-control-label" %>
                <div class="input-group">
                    <div class="input-group-addon"><i class="fa  fa-meh-o"></i></div>
                    <%= form.text_field :role, class: "form-control" %>
                </div>
                <small class="form-text text-muted">ex. Director</small>
            </div>
            <div class="form-group">
                <%= form.label :first_name, class: "form-control-label" %>
                <i class="fa  fa-asterisk text-danger"></i>
                <div class="input-group">
                    <div class="input-group-addon"><i class="fa  fa-meh-o"></i></div>
                    <%= form.text_field :first_name, class: "form-control", required: true %>
                </div>
                <small class="form-text text-muted">ex. Joe Moore</small>
            </div>

            <div class="form-group">
                <%= form.label :virtual_first_name, class: "form-control-label" %>
                <i class="fa  fa-asterisk text-danger"></i>
                <div class="input-group">
                    <div class="input-group-addon"><i class="fa  fa-meh-o"></i></div>
                    <%= form.text_field :virtual_name, class: "form-control", required: true %>
                </div>
                <small class="form-text text-muted">ex. James</small>
            </div>

            <div class="form-group">
                <%= form.label "User Name/Email", class: "form-control-label" %>
                <i class="fa  fa-asterisk text-danger"></i>
                <div class="input-group">
                    <div class="input-group-addon"><i class="fa  fa-meh-o"></i></div>
                    <%= form.text_field :username_email, class: "form-control", required: true,  :pattern => '[^@]+@[^@]+\.[a-zA-Z]{2,6}' %>
                </div>
                <small class="form-text text-muted">ex. example@abc.com</small>
            </div>

            <div class="form-group">
                <%= form.label :gender, class: "form-control-label" %>
                <div class="input-group">
                    <div class="input-group-addon"><i class="fa  fa-arrow-circle-o-down"></i></div>
                    <%= form.select :gender, options_for_select(gender, :selected => @employee.gender), { include_blank: true }, class: "form-control" %>
                </div>
                <small class="form-text text-muted">ex. Male</small>
            </div>

            <div class="form-group">
                <%= form.label :chat_limit, class: "form-control-label" %>
                <div class="input-group">
                    <div class="input-group-addon"><i class="fa  fa-arrow-circle-o-down"></i></div>
                    <%= form.select :chat_limit, options_for_select(limit, :selected => @employee.chat_limit), { include_blank: true }, class: "form-control" %>
                </div>
                <small class="form-text text-muted">ex. 1</small>
            </div>

            <div class="form-group">
                <%= form.label :email_limit, class: "form-control-label" %>
                <div class="input-group">
                    <div class="input-group-addon"><i class="fa  fa-arrow-circle-o-down"></i></div>
                    <%= form.select :email_limit, options_for_select(limit, :selected => @employee.email_limit), { include_blank: true }, class: "form-control" %>
                </div>
                <small class="form-text text-muted">ex. 2</small>
            </div>

            <div class="form-group">
                <div class="input-group">
                    <%= form.label "Multi-Session/Allowed", class: "form-check-label" %> 
                    <%= form.check_box :is_multisession_allow, class: "form-check-input" %>
                </div>
                
            </div>



            <div class="form-group">
                <%= form.label :select_volume, class: "form-control-label" %>
                <div class="input-group">
                    <div class="input-group-addon"><i class="fa  fa-arrow-circle-o-down"></i></div>
                    <%= form.select :select_volume, options_for_select(limit, :selected => @employee.select_volume), { include_blank: true }, class: "form-control" %>
                </div>
                <small class="form-text text-muted">ex. 2</small>
            </div>

            <div class="form-group">
                <%= form.label :select_ring_type, class: "form-control-label" %>
                <div class="input-group">
                    <div class="input-group-addon"><i class="fa  fa-arrow-circle-o-down"></i></div>
                    <%= form.select :select_ring_type, options_for_select(limit, :selected => @employee.select_ring_type), { include_blank: true }, class: "form-control" %>
                </div>
                <small class="form-text text-muted">ex. 2</small>
            </div>

            
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        <%= form.submit local_assigns[:operation], class: "btn btn-primary" %>
    </div>
<% end %>