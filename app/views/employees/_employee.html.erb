<tr>
    <td>
        <%= employee.role %>
    </td>
    <td>
        <%= employee.first_name %>
    </td>
    <td>
        <%= employee.virtual_name %>
    </td>
    <td>
        <%= employee.username_email %>
    </td>
    <td>
        <%= employee.gender %>
    </td>
    <td>
        <%= employee.is_multisession_allow=="1" ? "Allowed" : "Disallowed" %>
    </td>
    <td class="operations">
        <%= link_to  edit_employee_path(employee), remote: true  do %>
            <i class="fa fa-edit"></i>
        <% end %>
        &emsp;
        <%= link_to "X", employee, method: :delete, data: { confirm: 'Are you sure?' }, class: " text-danger" %>
    </td>
</tr>