<% content_for :head do %>
    <%= stylesheet_link_tag    'employees', media: 'all' %>
<% end %>

<%= render "layouts/left_panel", link: 'employees' %>

<!-- Right Panel -->

<div id="right-panel" class="right-panel">

    <%= render "layouts/header" %>

    <%= render "layouts/table_layout/breadcrumbs", link: ['employees'] %>

    <div class="content mt-3">
        
        <div class="animated">
            

            <div class="row">
                <%= render "layouts/table_layout/notice" %>
                <div class="col-md-12">
                    <div class="card">
                        <%= render "layouts/table_layout/card_header", current_title: "employees" %>
                        <div class="card-body">
                            <table id="bootstrap-data-table" class="table table-striped table-bordered">
                                <thead>
                                <tr>
                                    <th> Role </th>
                                    <th> First Name </th>
                                    <th> Virtual Name </th>
                                    <th> Username / Email </th>
                                    <th> Gender </th>
                                    <th> Multi Session Allowed </th>
                                    <th> Operations </th>
                                </tr>
                                </thead>
                                <tbody>
                                    <%= render partial: "employee", collection: @employees %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <%= render "new" %>
                    <%= render "edit" %>
                    <span class="edit-common-modal" data-toggle="modal" data-target="#updatemodal"> </span>
                </div>


            </div>
        </div><!-- .animated -->
    </div><!-- .content -->


</div><!-- /#right-panel -->

<!-- Right Panel -->

<%= javascript_include_tag 'jemployees' %>